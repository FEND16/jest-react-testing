{
  "name": "currency-check",
  "description": "Example react app to use for integration and snapshot testing",
  "private": true,
  "version": "0.1.0",
  "author": "Jesper Orb <jesperorb@gmail.com> (https://jesperorb.com/)",
  "license": "MIT",
  "dependencies": {
    "enzyme": "3.2.0",
    "enzyme-adapter-react-16": "1.1.1",
    "enzyme-to-json": "3.3.0",
    "fetch-mock": "5.13.1",
    "isomorphic-fetch": "2.2.1",
    "prop-types": "15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts": "1.0.17",
    "react-test-renderer": "16.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "coverage": "yarn test --coverage && cat ./coverage/lcov.info | coveralls",
    "cypress:open": "./node_modules/.bin/cypress open",
    "cypress:run" : "./node_modules/.bin/cypress run"
  },
  "devDependencies": {
    "coveralls": "3.0.0",
    "cypress": "1.4.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-cypress": "2.0.1",
    "eslint-plugin-react": "7.5.1"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "src/*/*.js",
      "!src/index.js",
      "!src/registerServiceWorker.js",
      "!src/setupTests.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      },
      "./src/components/": {
        "branches": 50,
        "statements": 50
      }
    }
  },
  "homepage": "https://jesperorb.github.io/currency-check"
}
